<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_dark_grey"
    >

    <Button
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RadioGroup
        android:id="@+id/rg_activity_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_start">
        <RadioButton
            android:id="@+id/rb_run"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Run"
            android:textColor="@color/theme_light_grey"
            android:textSize="@dimen/rb_text_size"
            android:layout_marginLeft="@dimen/rb_margin_side"
            android:layout_marginRight="@dimen/rb_margin_side"
            android:layout_marginTop="@dimen/rb_margin_top"
            />
        <RadioButton
            android:id="@+id/rb_cycle"
            android:textColor="@color/theme_light_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cycle"
            android:textSize="@dimen/rb_text_size"
            android:layout_marginLeft="@dimen/rb_margin_side"
            android:layout_marginRight="@dimen/rb_margin_side"
            android:layout_marginTop="@dimen/rb_margin_top"/>
        <RadioButton
            android:id="@+id/rb_walk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_light_grey"
            android:text="Walk"
            android:textSize="@dimen/rb_text_size"
            android:layout_marginLeft="@dimen/rb_margin_side"
            android:layout_marginRight="@dimen/rb_margin_side"
            android:layout_marginTop="@dimen/rb_margin_top"/>
    </RadioGroup>







    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme_light_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_activity_choice"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="@color/theme_dark_grey"/>

</androidx.constraintlayout.widget.ConstraintLayout>